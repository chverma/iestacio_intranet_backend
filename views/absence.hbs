<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="refresh" content="60">
  <title>App</title>
  <link rel="stylesheet" href="/absence.css">
</head>

<body>
  <table border="1" cellpadding="8" style="border-collapse:collapse; width:100%; text-align:center;">
    <thead>
      <tr>
        <th>Dia</th>
        <th>Hora</th>
        <th>Assignatura</th>
        <th>Grup</th>
        <th>Ubicaci√≥</th>
        <th>Treball</th>
        <th>Docent</th>
      </tr>
    </thead>
    <tbody>
      {{#each absence}}
      <tr class="{{#if (classShift date_absence)}}even-row{{else}}odd-row{{/if}}">
        <td>
          {{formatDay date_absence}}
        </td>
        <td>
          {{formatHour date_absence}}
        </td>
        <td>{{subject}}</td>
        <td>{{group}}</td>
        <td>{{location}}</td>
        <td>{{work}}</td>
        <td>{{user.name}} {{user.surname}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</body>

</html>